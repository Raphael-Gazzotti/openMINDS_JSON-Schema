{
  "$id": "https://openminds.ebrains.eu/core/Organization?format=json-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Structured information on an organization.",
  "properties": {
    "@id": {
      "description": "Metadata node identifier.",
      "type": "string"
    },
    "@type": {
      "const": "https://openminds.ebrains.eu/core/Organization",
      "description": "Metadata schema identifier.",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/affiliation": {
      "description": "Declaration of a person being closely associated to an organization.",
      "items": {
        "$ref": "https://openminds.ebrains.eu/core/Affiliation?format=json-schema",
        "type": "object"
      },
      "minItems": 1,
      "name": "affiliation",
      "type": "array",
      "uniqueItems": true
    },
    "https://openminds.ebrains.eu/vocab/digitalIdentifier": {
      "description": "Digital handle to identify objects or legal persons.",
      "items": {
        "else": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "if": {
          "required": [
            "@type"
          ]
        },
        "then": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            },
            "@type": {
              "enum": [
                "https://openminds.ebrains.eu/core/GRIDID",
                "https://openminds.ebrains.eu/core/RORID",
                "https://openminds.ebrains.eu/core/RRID"
              ],
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "type": "object"
      },
      "minItems": 1,
      "name": "digitalIdentifier",
      "type": "array",
      "uniqueItems": true
    },
    "https://openminds.ebrains.eu/vocab/fullName": {
      "description": "Whole, non-abbreviated name of something or somebody.",
      "name": "fullName",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/hasParent": {
      "description": "Reference to a parent object or legal person.",
      "items": {
        "else": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "if": {
          "required": [
            "@type"
          ]
        },
        "then": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            },
            "@type": {
              "enum": [
                "https://openminds.ebrains.eu/core/Organization"
              ],
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "type": "object"
      },
      "minItems": 1,
      "name": "hasParent",
      "type": "array",
      "uniqueItems": true
    },
    "https://openminds.ebrains.eu/vocab/homepage": {
      "description": "Main website of something or someone.",
      "format": "iri",
      "name": "homepage",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/shortName": {
      "description": "Shortened or fully abbreviated name of something or somebody.",
      "name": "shortName",
      "type": "string"
    }
  },
  "required": [
    "@id",
    "@type",
    "https://openminds.ebrains.eu/vocab/fullName"
  ],
  "title": "Organization",
  "type": "object"
}