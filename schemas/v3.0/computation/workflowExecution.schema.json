{
  "$id": "https://openminds.ebrains.eu/computation/WorkflowExecution?format=json-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Structured information about an execution of a computational workflow.",
  "properties": {
    "@id": {
      "description": "Metadata node identifier.",
      "type": "string"
    },
    "@type": {
      "const": "https://openminds.ebrains.eu/computation/WorkflowExecution",
      "description": "Metadata schema identifier.",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/configuration": {
      "description": null,
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "configuration",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.ebrains.eu/core/Configuration",
              "https://openminds.ebrains.eu/core/File"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    },
    "https://openminds.ebrains.eu/vocab/recipe": {
      "description": null,
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "recipe",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.ebrains.eu/computation/WorkflowRecipeVersion"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    },
    "https://openminds.ebrains.eu/vocab/stage": {
      "description": null,
      "items": {
        "else": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "if": {
          "required": [
            "@type"
          ]
        },
        "then": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            },
            "@type": {
              "enum": [
                "https://openminds.ebrains.eu/computation/DataAnalysis",
                "https://openminds.ebrains.eu/computation/DataCopy",
                "https://openminds.ebrains.eu/computation/GenericComputation",
                "https://openminds.ebrains.eu/computation/ModelValidation",
                "https://openminds.ebrains.eu/computation/Optimization",
                "https://openminds.ebrains.eu/computation/Simulation",
                "https://openminds.ebrains.eu/computation/Visualization"
              ],
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "type": "object"
      },
      "minItems": 1,
      "name": "stage",
      "type": "array",
      "uniqueItems": true
    },
    "https://openminds.ebrains.eu/vocab/startedBy": {
      "description": null,
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "startedBy",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.ebrains.eu/computation/SoftwareAgent",
              "https://openminds.ebrains.eu/core/Person"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    }
  },
  "required": [
    "@id",
    "@type",
    "https://openminds.ebrains.eu/vocab/stage"
  ],
  "title": "WorkflowExecution",
  "type": "object"
}