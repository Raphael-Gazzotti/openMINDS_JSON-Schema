{
  "$id": "https://openminds.ebrains.eu/core/Protocol?format=json-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Structured information on a research project.",
  "properties": {
    "@id": {
      "description": "Metadata node identifier.",
      "type": "string"
    },
    "@type": {
      "const": "https://openminds.ebrains.eu/core/Protocol",
      "description": "Metadata schema identifier.",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/describedIn": {
      "description": null,
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "describedIn",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.ebrains.eu/core/DOI",
              "https://openminds.ebrains.eu/core/File",
              "https://openminds.ebrains.eu/core/WebResource"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    },
    "https://openminds.ebrains.eu/vocab/description": {
      "description": "Longer statement or account giving the characteristics of someone or something.",
      "name": "description",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/name": {
      "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
      "name": "name",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/stimulusType": {
      "description": null,
      "items": {
        "else": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "if": {
          "required": [
            "@type"
          ]
        },
        "then": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            },
            "@type": {
              "enum": [
                "https://openminds.ebrains.eu/controlledTerms/AuditoryStimulusType",
                "https://openminds.ebrains.eu/controlledTerms/ElectricalStimulusType",
                "https://openminds.ebrains.eu/controlledTerms/GustatoryStimulusType",
                "https://openminds.ebrains.eu/controlledTerms/OlfactoryStimulusType",
                "https://openminds.ebrains.eu/controlledTerms/OpticalStimulusType",
                "https://openminds.ebrains.eu/controlledTerms/TactileStimulusType",
                "https://openminds.ebrains.eu/controlledTerms/VisualStimulusType"
              ],
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "type": "object"
      },
      "minItems": 1,
      "name": "stimulusType",
      "type": "array",
      "uniqueItems": true
    },
    "https://openminds.ebrains.eu/vocab/technique": {
      "description": "Method of accomplishing a desired aim.",
      "items": {
        "else": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "if": {
          "required": [
            "@type"
          ]
        },
        "then": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            },
            "@type": {
              "enum": [
                "https://openminds.ebrains.eu/controlledTerms/AnalysisTechnique",
                "https://openminds.ebrains.eu/controlledTerms/StimulationApproach",
                "https://openminds.ebrains.eu/controlledTerms/StimulationTechnique",
                "https://openminds.ebrains.eu/controlledTerms/Technique"
              ],
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "type": "object"
      },
      "minItems": 1,
      "name": "technique",
      "type": "array",
      "uniqueItems": true
    }
  },
  "required": [
    "@id",
    "@type",
    "https://openminds.ebrains.eu/vocab/description",
    "https://openminds.ebrains.eu/vocab/name",
    "https://openminds.ebrains.eu/vocab/technique"
  ],
  "title": "Protocol",
  "type": "object"
}