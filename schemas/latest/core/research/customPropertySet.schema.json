{
  "$id": "https://openminds.ebrains.eu/core/CustomPropertySet?format=json-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Structured information about properties of an entity that are not represented in an openMINDS schema.",
  "properties": {
    "@id": {
      "description": "Metadata node identifier.",
      "type": "string"
    },
    "@type": {
      "const": "https://openminds.ebrains.eu/core/CustomPropertySet",
      "description": "Metadata schema identifier.",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/context": {
      "description": null,
      "name": "context",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/dataLocation": {
      "description": null,
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "dataLocation",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.ebrains.eu/core/Configuration",
              "https://openminds.ebrains.eu/core/File",
              "https://openminds.ebrains.eu/core/PropertyValueList"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    },
    "https://openminds.ebrains.eu/vocab/relevantFor": {
      "description": "Reference to what or whom something or someone bears significance.",
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "relevantFor",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.ebrains.eu/controlledTerms/AnalysisTechnique",
              "https://openminds.ebrains.eu/controlledTerms/MRIPulseSequence",
              "https://openminds.ebrains.eu/controlledTerms/StimulationApproach",
              "https://openminds.ebrains.eu/controlledTerms/StimulationTechnique",
              "https://openminds.ebrains.eu/controlledTerms/Technique"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    }
  },
  "required": [
    "@id",
    "@type",
    "https://openminds.ebrains.eu/vocab/context",
    "https://openminds.ebrains.eu/vocab/dataLocation",
    "https://openminds.ebrains.eu/vocab/relevantFor"
  ],
  "title": "CustomPropertySet",
  "type": "object"
}