{
  "$id": "core:Project?format=json-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": null,
  "properties": {
    "@id": {
      "description": "Metadata node identifier.",
      "type": "string"
    },
    "@type": {
      "const": "core:Project",
      "description": "Metadata schema identifier.",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/coordinator": {
      "description": "Legal person who organizes the collaborative work of people or groups.",
      "items": {
        "else": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "if": {
          "required": [
            "@type"
          ]
        },
        "then": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            },
            "@type": {
              "enum": [
                "core:Consortium",
                "core:Organization",
                "core:Person"
              ],
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "type": "object"
      },
      "minItems": 1,
      "name": "coordinator",
      "type": "array",
      "uniqueItems": true
    },
    "https://openminds.ebrains.eu/vocab/description": {
      "description": "Longer statement or account giving the characteristics of someone or something.",
      "name": "description",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/fullName": {
      "description": "Whole, non-abbreviated name of something or somebody.",
      "name": "fullName",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/hasPart": {
      "description": null,
      "items": {
        "else": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "if": {
          "required": [
            "@type"
          ]
        },
        "then": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            },
            "@type": {
              "enum": [
                "computation:ValidationTest",
                "computation:ValidationTestVersion",
                "computation:WorkflowRecipe",
                "computation:WorkflowRecipeVersion",
                "core:Dataset",
                "core:DatasetVersion",
                "core:MetaDataModel",
                "core:MetaDataModelVersion",
                "core:Model",
                "core:ModelVersion",
                "core:Software",
                "core:SoftwareVersion",
                "core:WebService",
                "core:WebServiceVersion",
                "publications:LivePaper",
                "publications:LivePaperVersion",
                "sands:BrainAtlas",
                "sands:BrainAtlasVersion",
                "sands:CommonCoordinateSpace",
                "sands:CommonCoordinateSpaceVersion"
              ],
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "type": "object"
      },
      "minItems": 2,
      "name": "hasPart",
      "type": "array",
      "uniqueItems": true
    },
    "https://openminds.ebrains.eu/vocab/homepage": {
      "description": "Main website of something or someone.",
      "format": "iri",
      "name": "homepage",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/shortName": {
      "description": "Shortened or fully abbreviated name of something or somebody.",
      "name": "shortName",
      "type": "string"
    }
  },
  "required": [
    "@id",
    "@type",
    "https://openminds.ebrains.eu/vocab/description",
    "https://openminds.ebrains.eu/vocab/fullName",
    "https://openminds.ebrains.eu/vocab/hasPart",
    "https://openminds.ebrains.eu/vocab/shortName"
  ],
  "title": "core:Project",
  "type": "object"
}