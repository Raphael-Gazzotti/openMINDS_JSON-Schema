{
  "$id": "https://openminds.ebrains.eu/core/ParameterSetting?format=json-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Structured information on a used parameter setting.",
  "properties": {
    "@id": {
      "description": "Metadata node identifier.",
      "type": "string"
    },
    "@type": {
      "const": "https://openminds.ebrains.eu/core/ParameterSetting",
      "description": "Metadata schema identifier.",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/description": {
      "description": "Longer statement or account giving the characteristics of someone or something.",
      "name": "description",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/name": {
      "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
      "name": "name",
      "type": "string"
    },
    "https://openminds.ebrains.eu/vocab/relevantFor": {
      "description": "Reference to what or whom something or someone bears siginificance.",
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "relevantFor",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.ebrains.eu/controlledTerms/BehavioralTask",
              "https://openminds.ebrains.eu/controlledTerms/Technique"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    },
    "https://openminds.ebrains.eu/vocab/unit": {
      "description": "Determinate quantity adopted as a standard of measurement.",
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "unit",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    },
    "https://openminds.ebrains.eu/vocab/value": {
      "description": "Entry for a property.",
      "name": "value",
      "type": "UNKNOWN_TYPE"
    }
  },
  "required": [
    "@id",
    "@type",
    "https://openminds.ebrains.eu/vocab/description",
    "https://openminds.ebrains.eu/vocab/name",
    "https://openminds.ebrains.eu/vocab/relevantFor",
    "https://openminds.ebrains.eu/vocab/value"
  ],
  "title": "ParameterSetting",
  "type": "object"
}