{
  "$id": "https://openminds.om-i.org/types/SoftwareAgent?format=json-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Structured information about a piece of software or web service that can perform a task autonomously.",
  "properties": {
    "@id": {
      "description": "Metadata node identifier.",
      "type": "string"
    },
    "@type": {
      "const": "https://openminds.om-i.org/types/SoftwareAgent",
      "description": "Metadata schema identifier.",
      "type": "string"
    },
    "https://openminds.om-i.org/props/environment": {
      "description": null,
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "environment",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.om-i.org/types/Environment"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    },
    "https://openminds.om-i.org/props/name": {
      "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
      "name": "name",
      "type": "string"
    },
    "https://openminds.om-i.org/props/software": {
      "description": null,
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "software",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.om-i.org/types/SoftwareVersion"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    }
  },
  "required": [
    "@id",
    "@type",
    "https://openminds.om-i.org/props/name",
    "https://openminds.om-i.org/props/software"
  ],
  "title": "SoftwareAgent",
  "type": "object"
}