{
  "$id": "https://openminds.om-i.org/types/ChemicalMixture?format=json-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Structured information about a mixture of chemical substances.",
  "properties": {
    "@id": {
      "description": "Metadata node identifier.",
      "type": "string"
    },
    "@type": {
      "const": "https://openminds.om-i.org/types/ChemicalMixture",
      "description": "Metadata schema identifier.",
      "type": "string"
    },
    "https://openminds.om-i.org/props/additionalRemarks": {
      "description": "Mention of what deserves additional attention or notice.",
      "name": "additionalRemarks",
      "type": "string"
    },
    "https://openminds.om-i.org/props/hasPart": {
      "description": null,
      "items": {
        "$ref": "https://openminds.om-i.org/types/AmountOfChemical?format=json-schema",
        "type": "object"
      },
      "minItems": 2,
      "name": "hasPart",
      "type": "array",
      "uniqueItems": true
    },
    "https://openminds.om-i.org/props/name": {
      "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
      "name": "name",
      "type": "string"
    },
    "https://openminds.om-i.org/props/productSource": {
      "description": null,
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "productSource",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.om-i.org/types/ProductSource"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    },
    "https://openminds.om-i.org/props/type": {
      "description": "Distinct class to which a group of entities or concepts with similar characteristics or attributes belong to.",
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "type",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.om-i.org/types/ChemicalMixtureType"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    }
  },
  "required": [
    "@id",
    "@type",
    "https://openminds.om-i.org/props/hasPart",
    "https://openminds.om-i.org/props/type"
  ],
  "title": "ChemicalMixture",
  "type": "object"
}