{
  "$id": "https://openminds.om-i.org/types/Recording?format=json-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": null,
  "properties": {
    "@id": {
      "description": "Metadata node identifier.",
      "type": "string"
    },
    "@type": {
      "const": "https://openminds.om-i.org/types/Recording",
      "description": "Metadata schema identifier.",
      "type": "string"
    },
    "https://openminds.om-i.org/props/additionalRemarks": {
      "description": "Mention of what deserves additional attention or notice.",
      "name": "additionalRemarks",
      "type": "string"
    },
    "https://openminds.om-i.org/props/channel": {
      "description": null,
      "items": {
        "$ref": "https://openminds.om-i.org/types/Channel?format=json-schema",
        "type": "object"
      },
      "minItems": 1,
      "name": "channel",
      "type": "array",
      "uniqueItems": true
    },
    "https://openminds.om-i.org/props/dataLocation": {
      "description": null,
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "dataLocation",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.om-i.org/types/File",
              "https://openminds.om-i.org/types/FileBundle"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    },
    "https://openminds.om-i.org/props/internalIdentifier": {
      "description": "Term or code that identifies someone or something within a particular product.",
      "name": "internalIdentifier",
      "type": "string"
    },
    "https://openminds.om-i.org/props/name": {
      "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
      "name": "name",
      "type": "string"
    },
    "https://openminds.om-i.org/props/previousRecording": {
      "description": null,
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "previousRecording",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.om-i.org/types/Recording"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    },
    "https://openminds.om-i.org/props/recordedWith": {
      "description": null,
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "recordedWith",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.om-i.org/types/ElectrodeArrayUsage",
              "https://openminds.om-i.org/types/ElectrodeUsage",
              "https://openminds.om-i.org/types/PipetteUsage",
              "https://openminds.om-i.org/types/SlicingDeviceUsage"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    },
    "https://openminds.om-i.org/props/samplingFrequency": {
      "$ref": "https://openminds.om-i.org/types/QuantitativeValue?format=json-schema",
      "description": null,
      "name": "samplingFrequency",
      "type": "object"
    }
  },
  "required": [
    "@id",
    "@type",
    "https://openminds.om-i.org/props/channel",
    "https://openminds.om-i.org/props/dataLocation",
    "https://openminds.om-i.org/props/recordedWith",
    "https://openminds.om-i.org/props/samplingFrequency"
  ],
  "title": "Recording",
  "type": "object"
}