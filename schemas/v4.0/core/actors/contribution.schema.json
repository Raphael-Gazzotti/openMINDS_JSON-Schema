{
  "$id": "https://openminds.om-i.org/types/Contribution?format=json-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Structured information on the contribution made to a research product.",
  "properties": {
    "@id": {
      "description": "Metadata node identifier.",
      "type": "string"
    },
    "@type": {
      "const": "https://openminds.om-i.org/types/Contribution",
      "description": "Metadata schema identifier.",
      "type": "string"
    },
    "https://openminds.om-i.org/props/contributor": {
      "description": "Legal person that gave or supplied something as a part or share.",
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "contributor",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.om-i.org/types/Consortium",
              "https://openminds.om-i.org/types/Organization",
              "https://openminds.om-i.org/types/Person"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    },
    "https://openminds.om-i.org/props/type": {
      "description": "Distinct class to which a group of entities or concepts with similar characteristics or attributes belong to.",
      "items": {
        "else": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "if": {
          "required": [
            "@type"
          ]
        },
        "then": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            },
            "@type": {
              "enum": [
                "https://openminds.om-i.org/types/ContributionType"
              ],
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "type": "object"
      },
      "minItems": 1,
      "name": "type",
      "type": "array",
      "uniqueItems": true
    }
  },
  "required": [
    "@id",
    "@type",
    "https://openminds.om-i.org/props/contributor",
    "https://openminds.om-i.org/props/type"
  ],
  "title": "Contribution",
  "type": "object"
}